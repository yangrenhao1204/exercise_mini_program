page {
    overflow: auto;
    box-sizing: border-box;
    /* padding-bottom: 50px; */
    height: 90%;
}

.header {
    border-bottom: 1px solid #f0f0f0;
    box-shadow: 0px 2px 5px #f0f0f5;
    z-index: 100;
    height: 35px;
}

.header .header-item {
    flex-grow: 1;
}

.header .title-left {
    text-align: left;
}

.header .title-center {
    text-align: center;
}

.header .title-right {
    text-align: right;
}

.go-finish {
    color: crimson;
}



.selected {
    background-color: #f6f6f6;
}

.correct{
    background-color: #cfc;
    background-repeat: no-repeat;
    background-position: 97%;
    background-size: 20px;
}

.correct.selected {
    background-color: #6e6;
    background-repeat: no-repeat;
    background-position: 97%;
    background-size: 20px;
}

.incorrect.selected {
    background-color: #e66;
    background-repeat: no-repeat;
    background-position: 97%;
    background-size: 20px;
}

.question-view {
    width: 100%;
}

.do-answer {
    /* height: 65rpx; */
    width: 50%;
    text-align: center;
    margin: auto;
    line-height: 65rpx;
    border-radius: 2px;
    margin-top: 30px;
    color: white;
    background-color: #f0d264;
}

.answers {
    display: flex;
    flex-direction: column;
    font-size: 16px;
    border-bottom: 1px solid #f0f0f0;
}

.correct-answer {
    font-size: 16px;
    padding: 50rpx 30rpx 30rpx 30rpx;
}

.answer-explain {
    padding-top: 20rpx;
}

.answer-item {
    line-height: 40px;
    padding-left: 10px;
    padding-right: 10px;
    border-bottom: 1px solid #f0f0f0;
}

.question {
    padding-left: 10px;
    padding-right: 10px;
    border-bottom: 2px solid #f0f0f0;
}



.swipers {
    width: 100%;
    height: 100%;
    position: relative;
    overflow-x: hidden;
    overflow-y: scroll;
}

.swipers .swiperItem {
    width: 100%;
    height: 100%;
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
    box-sizing: border-box;
}

.swipers .previousPage {
    transform: translateX(-100%);
}

.swipers .posteriorPage {
    transform: translateX(100%);
}

.footer-layer {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}

.footer {
    position: fixed;
    box-sizing: border-box;
    bottom: 0;
    width: 100%;
    transform: translate3d(0, 100%, 0);
    z-index: 100;
}

.count {
    position: absolute;
    box-sizing: border-box;
    top: -115rpx;
    height: 30%;
    width: 100%;
    padding: 35rpx 30rpx;
    font-size: 24rpx;
    overflow: hidden;
    zoom: 1;
    z-index: 1000;
    background: rgb(240, 240, 240);
    border-bottom: 1px solid #f0f0f0;
    box-shadow: 0px 2px 5px #f0f0f5;
    border-top: 1px solid #f0f0f0;
}

.count view {
    float: right;
    line-height: 34rpx;
}

.count .completion {
    height: 30rpx;
    padding: 0 0 0 37rpx;
    font-size: 24rpx;
    color: #666;
    background: url("data:image/png;base64,") no-repeat left center/28rpx 28rpx;
    line-height: 36rpx;
}

.count .correct {
    height: 30rpx;
    margin-right: 30rpx;
    padding-left: 40rpx;
    background: url("data:image/png;base64,") no-repeat left center/30rpx 30rpx;
    font-size: 24rpx;
    color: rgb(0, 255, 0);
    vertical-align: middle;
    line-height: 36rpx;
}

.count .error {
    height: 30rpx;
    margin-right: 30rpx;
    padding-left: 40rpx;
    background: url("data:image/png;base64,") no-repeat left center/30rpx 30rpx;
    font-size: 24rpx;
    color: rgb(255, 0, 0);
    vertical-align: middle;
    line-height: 36rpx;
}

.problemListLayer {
    max-height: 500rpx;
    padding: 0 0 24rpx;
    border-top: 1rpx solid #eaeaea;
    background: #fff;
    z-index: 100;
    overflow: auto;
}

.problemListLayer .status {
  float: left;
  width: 98rpx;
  height: 98rpx;
  margin: 24rpx 0 0 20rpx;
  border-radius: 50rpx;
  border: 1rpx solid #ccc;
  font-size: 20rpx;
  line-height: 98rpx;
  text-align: center;
  color: #ccc;
}

.problemListLayer .status.current {
  color: #999;
  border-color: #999;
  background: #f6f6f6;
}

.problemListLayer .status.right {
  color: #8f8;
  border-color: #4c4;
}

.problemListLayer .status.error {
  color: #f88;
  border-color: #c44;
}

.problemListLayer .status.right.current {
  color: #6f6;
  border-color: #6f6;
  background: #f0fff0;
}

.problemListLayer .status.error.current {
  color: #f66;
  border-color: #f66;
  background: #fff0f0;
}
